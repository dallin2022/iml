</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>


        <th>
          Image
        </th>

        <th>
          First Name
        </th>
        
        <th>
          Last Name
        </th>

        <th>
          Phone Number
        </th>
        
        <th>
          Tagline
        </th>

        <th>
          Created at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>

        <td>
          <%= cl_image_tag(a_photo.image, :transformation=>[
            {:width=>700, :height=>500, :gravity=>"faces", :crop=>"thumb"},
            {:width=>200, :height=>200, :radius=>"max", :crop=>"fill"}
            ])
          %>
        </td>

        <td>
          <%= a_photo.first_name %>
        </td>
       
        <td>
          <%= a_photo.last_name %>
        </td>

        <td>
          (<%= a_photo.phone.to_s[0,3] %>) <%= a_photo.phone.to_s[3,3] %>-<%= a_photo.phone.to_s[6,10] %>
        </td>
        
        <td>
          <%= a_photo.tagline %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
     
        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

