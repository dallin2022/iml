<div>
  <div>
    <h2>
      Edit customer profile
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>
      
      <div>
        <label for="first_name_box">
          First Name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_photo.first_name %>">
      </div>
  
      <div>
        <label for="last_name_box">
          Last Name
        </label>

        <input type="text" id="last_name_box" name="last_name" value="<%= @the_photo.last_name %>">
      </div>

      <div>
        <label for="tagline_box">
          Tagline
        </label>

        <textarea id="tagline_box" name="query_tagline"><%= @the_photo.tagline %></textarea>
      </div>

      
      <button>
        Update photo
      </button>
    </form>
  </div>
