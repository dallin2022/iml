<div>
  <div>
    <h1>
      <%= @the_photo.first_name %> <%= @the_photo.last_name %> customization submission TSV
    </h1>

    <div>
      <a href="/photos">
        Go back
      </a>
    </div>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <%= cl_image_tag(@the_photo.image, :transformation=>[
          {:width=>700, :height=>500, :gravity=>"faces", :crop=>"thumb"},
          {:width=>200, :height=>200, :radius=>"max", :crop=>"fill"}
          ])
        %>
      </dd>

      <dt>
        Tagline
      </dt>
      <dd>
        <%= @the_photo.tagline %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_photo.first_name %> <%= @the_photo.last_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

    </dl>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Edit photo
    </h2>

    <form action="/modify_photo/<%= @the_photo.id %>"  method="post" >
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_photo.image %>">
      </div>
      
      <div>
        <label for="first_name_box">
          First Name
        </label>

        <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_photo.first_name %>">
      </div>
  
      <div>
        <label for="last_name_box">
          Last Name
        </label>

        <input type="text" id="last_name_box" name="last_name" value="<%= @the_photo.last_name %>">
      </div>

      <div>
        <label for="tagline_box">
          Tagline
        </label>

        <textarea id="tagline_box" name="query_tagline"><%= @the_photo.tagline %></textarea>
      </div>

      
      <button>
        Update photo
      </button>
    </form>
  </div>
</div>

<hr>


<h2>TSV Upload</h2>

<table border="1">
      <tr>
        <th>
          AgentPhoto
        </th>

        <th>
          comp
        </th>

