    <h1>
      <%= @the_photo.first_name %> <%= @the_photo.last_name %> customization submission TSV
    </h1>

    <div>
      <a href="/photos">
        Go back
      </a>
    </div>

    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <%= cl_image_tag(@the_photo.image, :transformation=>[
          {:width=>700, :height=>500, :gravity=>"faces", :crop=>"thumb"},
          {:width=>200, :height=>200, :radius=>"max", :crop=>"fill"}
          ])
        %>
      </dd>

      <dt>
        Tagline
      </dt>
      <dd>
        <%= @the_photo.tagline %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_photo.first_name %> <%= @the_photo.last_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

    </dl>
  </div>
</div>

