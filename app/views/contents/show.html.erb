</ul>

<div>
  <div>
    <h1>
      <%= @the_content.name %> details
    </h1>

    <div>
      <div>
        <a href="/contents">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_content/<%= @the_content.id %>">
          Delete content
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_content.name %>
      </dd>

      <dt>
        Ae name
      </dt>
      <dd>
        <%= @the_content.ae_name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_content.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_content.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit content
    </h2>

    <form action="/modify_content/<%= @the_content.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_content.name %>">
      </div>

      <div>
        <label for="ae_name_box">
          Ae name
        </label>

        <input type="text" id="ae_name_box" name="query_ae_name" value="<%= @the_content.ae_name %>">
      </div>

      <button>
        Update content
      </button>
    </form>
  </div>
</div>

<hr>
